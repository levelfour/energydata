<h1>Energies#edit</h1>
<form class="form-horizontal" role="form" method="post" action="/energies/update">
  <input type="hidden" name="id" value="<%=params[:id]%>" />
  <div class="form-group">
    <label for="date" class="col-sm-2 control-label">Date</label>
    <div class="col-sm-4">
      <select class="form-control" name="year">
      <% for y in 2001..Time.now.year %>
        <option value="<%=y%>" <%= "selected" if y == @data.month.year %>><%=y%></option>
      <% end %>
      </select>
    </div>
    <div class="col-sm-4">
      <select class="form-control" name="month">
      <% for m in 1..12 %>
        <option value="<%=m%>" <%= "selected" if m == @data.month.month %>><%=m%></option>
      <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="temperature" class="col-sm-2 control-label">Temperature</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="temperature" placeholder="Temperature" value="<%=@data.temperature%>" />
    </div>
  </div>
  <div class="form-group">
    <label for="daylight" class="col-sm-2 control-label">Daylight</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="daylight" placeholder="Daylight" value="<%=@data.daylight%>" />
    </div>
  </div>
  <div class="form-group">
    <label for="energy_production" class="col-sm-2 control-label">Energy Production</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="energy_production" placeholder="Energy Production" value="<%=@data.energy_production%>" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Save</button>
    </div>
  </div>
</form>
