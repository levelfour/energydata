<h1>Houses#edit</h1>
<form class="form-horizontal" role="form" method="post" action="/houses/update">
  <input type="hidden" name="id" value="<%=@house.id%>" />
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="last_name" placeholder="Last Name" value="<%=@house.last_name%>">
    </div>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="first_name" placeholder="First Name" value="<%=@house.first_name%>">
    </div>
  </div>
  <div class="form-group">
    <label for="city" class="col-sm-2 control-label">City</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="city" placeholder="City" value="<%=@house.city%>">
    </div>
  </div>
  <div class="form-group">
    <label for="num_of_people" class="col-sm-2 control-label">Num of People</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="num_of_people" placeholder="Num of People" value="<%=@house.num_of_people%>">
    </div>
  </div>
  <div class="form-group">
    <label for="has_child" class="col-sm-2 control-label">Has child</label>
    <div class="col-sm-8">
      <select class="form-control" name="has_child">
        <option value="0" <%="selected" if @house.has_child == 0%>>No</option>
        <option value="1" <%="selected" if @house.has_child == 1%>>Yes</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Save</button>
    </div>
  </div>
</form>
