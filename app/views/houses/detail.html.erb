<h1>
  Houses#detail
  <button type="button" class="btn btn-default" onClick="window.location='/houses/edit/?id=<%=@house.id%>'">edit</button>
  <button type="button" class="btn btn-default btn-delete" data-href="/houses/delete/?id=<%=@house.id%>">delete</button>
</h1>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>City</th>
			<th>Num of People</th>
			<th>Has child</th>
		</tr>
	</thead>
    <tr>
			<td><%= @house.id %></td>
			<td><%= "#{@house.last_name} #{@house.first_name}" %></td>
			<td><%= @house.city %></td>
			<td><%= @house.num_of_people %></td>
			<td><%= (@house.has_child == 1) %></td>
		</tr>
</table>

<h3>
  Energy Data
  <button type="button" class="btn btn-default" onClick="window.location='/energies/new/?id=<%=@house.id%>'">add</button>
</h3>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>House ID</th>
			<th>Label</th>
			<th>Month</th>
			<th>Temperature</th>
			<th>Daylight</th>
			<th>EnergyProduction</th>
		</tr>
	</thead>
	<% @data.each do |d| %>
    <tr data-href="/energies/detail/?id=<%= d.id %>">
			<td><%= d.id %></td>
			<td><%= d.house_id %></td>
			<td><%= d.label %></td>
			<td><%= "#{d.month.year}-#{d.month.month}" %></td>
			<td><%= d.temperature %></td>
			<td><%= d.daylight %></td>
			<td><%= d.energy_production %></td>
		</tr>
	<% end %>
</table>

