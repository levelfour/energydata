<h1>Houses#new</h1>
<form class="form-horizontal" role="form" method="post" action="/houses/add">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="last_name" placeholder="Last Name">
    </div>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="first_name" placeholder="First Name">
    </div>
  </div>
  <div class="form-group">
    <label for="city" class="col-sm-2 control-label">City</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="city" placeholder="City">
    </div>
  </div>
  <div class="form-group">
    <label for="num_of_people" class="col-sm-2 control-label">Num of People</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="num_of_people" placeholder="Num of People">
    </div>
  </div>
  <div class="form-group">
    <label for="has_child" class="col-sm-2 control-label">Has child</label>
    <div class="col-sm-8">
      <select class="form-control" name="has_child">
        <option value="0">No</option>
        <option value="1">Yes</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add</button>
    </div>
  </div>
</form>
